<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Kiosk"
             x:Class="Kiosk.BuildingsPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Source="placeholder.jpg" Aspect="AspectFill" Grid.ColumnSpan="5"/>
        <Image Source="placeholder.jpg" Aspect="AspectFill" Grid.Row="1"/>
        <Image Source="placeholder.jpg" Aspect="AspectFill" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"/>
        <Image Source="placeholder.jpg" Aspect="AspectFill" Grid.Row="1" Grid.Column="4"/>
        <Label FontSize="12" HorizontalTextAlignment="Center" VerticalOptions="Center" Grid.Row="2" Grid.ColumnSpan="5">Purvine Hall</Label>
        
        <StackLayout Grid.Row="3" Grid.ColumnSpan="2" BackgroundColor="#003767">
            <StackLayout.Resources>
                <Style TargetType="Label">
                    <Setter Property="TextColor" Value="White"/>
                </Style>
            </StackLayout.Resources>
            <Label FontSize="10" FontAttributes="Bold">
                Quick Facts
            </Label>
            <Label FontSize="8" FontAttributes="Bold">
                First Offered
            </Label>
            <Label FontSize="7">
                0000
            </Label>
            <Label FontSize="8" FontAttributes="Bold">
                Typical Employers
            </Label>
            <!-- Multiline labels are a bit strange. Using '&#x0a;' makes it multiline like using \n
                    Making it like the other labels leads to some strange tabbing -->
            <Label FontSize="7" Text="Company A&#x0a;Company B&#x0a;Company C&#x0a;Company D"/>
            <Label FontSize="8" FontAttributes="Bold">
                Expected Credit Hours
            </Label>
            <Label FontSize="7">
                500 Credit Hours
            </Label>
        </StackLayout>
        <Label Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3" Text="Text"/>
        <ScrollView Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="5" >
            <StackLayout Orientation="Horizontal">
                <StackLayout>
                    <StackLayout.Resources>
                        <Style TargetType="local:CroppedImage">
                            <Setter Property="HorizontalOptions" Value="Fill"/>
                        </Style>
                    </StackLayout.Resources>
                    <local:CroppedImage
                        Source="frog1.jpg"
                        CropAspect="Square"
	                    Orientation="Horizontal"
	                    ImageConstraintX="-0.5"
	                    ImageConstraintY="0"
                        ImageScaleX="2"
	                    ImageScaleY="1"
	                    />
                    <Label Text="Frog 1" />
                </StackLayout>
                <StackLayout>
                    <local:CroppedImage
                        Source="frog2.jpg"
                        CropAspect="Square"
	                    Orientation="Horizontal"
	                    ImageConstraintX="-0.5"
	                    ImageConstraintY="0"
                        ImageScaleX="2"
	                    ImageScaleY="1"
	                    />
                    <Label Text="Frog 2" />
                </StackLayout>
                <StackLayout>
                    <local:CroppedImage
                        Source="frog3.jpg"
                        CropAspect="Square"
	                    Orientation="Horizontal"
	                    ImageConstraintX="-0.5"
	                    ImageConstraintY="0"
                        ImageScaleX="2"
	                    ImageScaleY="1"
	                    />
                    <Label Text="Frog 3" />
                </StackLayout>
                <StackLayout>
                    <local:CroppedImage
                        Source="frog1.jpg"
                        CropAspect="Square"
	                    Orientation="Horizontal"
	                    ImageConstraintX="-0.5"
	                    ImageConstraintY="0"
                        ImageScaleX="2"
	                    ImageScaleY="1"
	                    />
                    <Label Text="Frog 1"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
